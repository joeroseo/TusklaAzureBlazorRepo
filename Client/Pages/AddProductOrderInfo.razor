    protected async Task SaveOrderInfo()
    {
        Console.WriteLine($"totalCartItems.Count {CartService.CartItems.Count}");

        if (orderInfo.OrderId != 0)
        {
            await Http.PutAsJsonAsync("api/ProductOrderInfo", orderInfo);
        }
