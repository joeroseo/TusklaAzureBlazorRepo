    }

    .dropdown-menu {
        display: none;
        position: absolute;
        background-color: #333;
        right: 0; /* Align dropdown to the right */
        top: 100%; /* Position dropdown below the dropdown toggle */
    }

        .dropdown-menu li {
            margin: 0;
        }

        .dropdown-menu a {
            color: #fff;
            display: block;
            padding: 10px 15px;
            text-decoration: none;
        }

        .dropdown-toggle:hover + .dropdown-menu,
        .dropdown-menu:hover {
            display: block;
        }
</style>
